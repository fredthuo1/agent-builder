{
  "name": "build-a-task-app-with-auth-and-s",
  "private": true,
  "scripts": {
    "dev": "npm run install:all && concurrently -k -n BACKEND,FRONTEND \"npm:dev:backend\" \"npm:dev:frontend\"",
    "install:all": "npm install && npm --prefix backend install && npm --prefix frontend install",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "start": "npm run install:all && concurrently -k -n BACKEND,FRONTEND \"npm:start:backend\" \"npm:start:frontend\"",
    "start:backend": "npm --prefix backend run start",
    "start:frontend": "npm --prefix frontend run start"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
